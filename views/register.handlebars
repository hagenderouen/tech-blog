<div class="row justify-content-center">
        <form id="form-register">
            <h2 class="h3 mb-3 font-weight-normal">Create a log in</h2>
            <label for="registerInputEmail" class="sr-only">Email address</label>
            <input type="email" id="registerInputEmail" class="form-control"
                placeholder="Email address" required autofocus>
            <label for="registerInputUsername" class="sr-only">Username</label>
            <input type="text" id="registerInputUsername" class="form-control" required>
            <label for="registerInputPassword" class="sr-only">Password</label>
            <input type="password" id="registerInputPassword" class="form-control" value="Password1" placeholder="Password"
                required>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
        </form>
        <span id="register-msg"></span>
</div>